{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/**/*.js",
    "scripts/**/*.ts",
    "scripts/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.json",
    "**/*.spec.js",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
